{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		"core:event:allow-listen",
		"core:event:allow-unlisten",
		"fs:default",
		"fs:allow-read-file",
		"fs:allow-write-file",
		"fs:allow-app-write",
		"dialog:default",
		"dialog:allow-save",
		"dialog:allow-open",
		{
			"identifier": "fs:scope",
			"allow": [
				{ "path": "$HOME/**" },
				{ "path": "$DESKTOP/**" },
				{ "path": "$DOWNLOAD/**" },
				{ "path": "$PICTURE/**" },
				{ "path": "$DOCUMENT/**" },
				{ "path": "$TEMP/**" }
			]
		}
	]
}
